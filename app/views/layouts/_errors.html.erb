<strong>
    <% if object.errors.any? %>
    <div id="error_explanation">
        <h2>Unable to save: <%= pluralize(object.errors.count, "error") %></h2>

        <ul>
        <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
</strong>