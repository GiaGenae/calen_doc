<section class="hero is-success is-fullheight">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <header class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
            <img src="https://bulma.io/images/bulma-type-white.png" alt="Logo">
          </a>
          <span class="navbar-burger" data-target="navbarMenuHeroC">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
		<br>
      </div>
    </header>
  </div>
  <br>
  <br>
  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
    <p class="title">
        Please complete form below.
    </p>
    <br>
    <br>
    <%= simple_form_for @appointment do |f| %>
        <div class="field">
            <div class="control">
                <%= f.input :date, input_html: { class: 'date' }, wrapper: false, label_html: { class: 'label'} %>
            </div>
        </div>
        <br>
        <br>
        <div class="field">
            <div class="control">
                <%= f.input :time, input_html: { class: 'time' }, wrapper: false, label_html: { class: 'label'} %>
            </div>
        </div>
        <br>
        <br>
        <div class="field">
            <div class="control">
                <%= f.input :notes, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label'} %>
            </div>
        </div>
        <br>
        <br>
        <div class="field">
            <div class="control">
            Select a doctor
                <%= f.collection_select :doctor_id, Doctor.all, :id, :first_name, input_html: { class: 'time' }, wrapper: false, label_html: { class: 'label'} %>
            </div>
        </div>

        <br>
        <br>
        <div class="field">
            <div class="control">
            Or add doctor here
            <br>
            <br>
                <%= f.fields_for :doctor do |d| %> 
                    <%=d.label :first_name %>
                    <%=d.text_field :first_name %>
                    <br>
                    <br>
                    <%=d.label :last_name %>
                    <%=d.text_field :last_name %>
                    <br>
                    <br>
                    <%=d.label :email %>
                    <%=d.text_field :email %>
                    <br>
                    <br>
                    <%=d.label :specialty %>
                    <%=d.text_field :specialty %>
                <% end %>
                <br>
                <br>
            </div>
        </div>
    </div>
        <%= f.button :submit, class: "button is-primary" %>
    <% end %>
    </div>
  </div>
  <br>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <nav class="tabs is-boxed is-fullwidth">
      <div class="container">
        <ul>
        <%= link_to "Log Out", logout_path, method: :delete %>
        <%= link_to "New Appointment", new_appointment_path %>
        <%= link_to "My Appointments", appointments_path %>
        </ul>
      </div>
    </nav>
  </div>
</section>
