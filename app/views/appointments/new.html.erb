

<section class="hero is-success is-fullheight">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <header class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <span class="navbar-burger" data-target="navbarMenuHeroC">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
      </div>
    </header>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
      <p class="title">
        Please complete New Appointment form below.
      </p>
      <p
      <strong><%= render partial: 'layouts/errors', locals: {object: @appointment} %></strong>
      </p>
    <div>
    <%= render partial: 'form'%>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <nav class="tabs is-boxed is-fullwidth">
      <div class="container">
        <ul>
            <%= link_to "Appointments", appointments_path %>
            <%= link_to "Doctors", doctors_path %>
            <%= link_to "Logout", logout_path, method: :delete %>
        </ul>
      </div>
    </nav>
  </div>
</section>





