<p><%= flash[:error] %></p>

<section class="hero is-success is-fullheight">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <header class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <span class="navbar-burger" data-target="navbarMenuHeroC">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
      </div>
    </header>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
      <p class="title">
        <%= @appointment.date %>
      </p>
      <p>
        <h1>Dr. <%= @appointment.doctor.last_name %></h1>
      </p>
      <p>
        <h1><%= @appointment.doctor.specialty %></h1>
      </p>
      <p>
        <h1><%= @appointment.time %></h1>
      </p>
      <p>
        <h1><%= @appointment.notes %></h1>
      </p>
      <br>
    </div>
    <br>
    <br>

    <%= link_to "Edit", edit_appointment_path(@appointment) if @appointment.user == current_user%>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <nav class="tabs is-boxed is-fullwidth">
      <div class="container">
        <ul>
            <%= link_to "New Appointment", new_appointment_path %>
            <%= link_to "Appointments", appointments_path %>
            <%= link_to "Doctors", doctors_path %>
            <%= link_to "Logout", logout_path %>
        </ul>
      </div>
    </nav>
  </div>
</section>




