<section class="hero is-success is-fullheight">
  <!-- Hero head: will stick at the top -->
  <div class="hero-head">
    <header class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">
            <img src="https://bulma.io/images/bulma-type-white.png" alt="Logo">
          </a>
          <span class="navbar-burger" data-target="navbarMenuHeroC">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </div>
		<br>
      </div>
    </header>
  </div>

  <!-- Hero content: will be in the middle -->
  <div class="hero-body">
    <div class="container has-text-centered">
    <p class="title">
        Feel free to leave your doctor a review below.
    </p>
    <%= simple_form_for @review do |f| %>
        <div class="field">
            <div class="control">
                <%= f.number_field :rating, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label'}, min:0, max:5 %>
            </div>
        </div>
    <%= f.hidden_field :doctor_id %>

        <br>
        <br>
        <%= f.button :submit, class: "button is-primary" %>
    <% end %>
    </div>
  </div>

  <!-- Hero footer: will stick at the bottom -->
  <div class="hero-foot">
    <nav class="tabs is-boxed is-fullwidth">
      <div class="container">
        <ul>
        </ul>
      </div>
    </nav>
  </div>
</section>


<%= form_for(@review) do |f|%>
    <div>
        <%= f.label :rating %>
        <%= f.text_field :rating %>
    </div>
    <%= f.hidden_field :doctor_id %>
  
  
    <%= f.submit %>
  <% end %>